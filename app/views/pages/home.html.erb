<!--NavBar-->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=image_path 'abeille_home1.png'%>)">
  <div class="container">
    <h1>Air Bee n Bee <strong>des ruches</strong> pour <strong>des abeilles</strong>!</h1>
    <p>Louez et réservez des ruches a travers le monde pour quelques pollens!</p>
    <%= link_to "Réservez maintenant !", hives_path, class: "banner-button btn" %>
  </div>
</div>

<div class="cards-home" >
  <%= link_to hives_path(category: "Ruche Aménagée"), class: "card-home-link" do %>
    <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=image_path 'ruche_aménagé.jpg'%>)">
      Ruche Aménagée
    </div>
  <% end %>

  <%= link_to hives_path(category: "Retour à la Nature"), class: "card-home-link" do %>
    <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=image_path 'nature.jpg'%>)">
      Retour à la Nature
    </div>
  <% end %>

  <%= link_to hives_path(category: "Famille Nombreuse"), class: "card-home-link" do %>
    <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=image_path 'famille_nombreuse.jpg'%>)">
      Famille Nombreuse
    </div>
  <% end %>

  <%= link_to hives_path(category: "Abeilles Amoureuses"), class: "card-home-link" do %>
    <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=image_path 'love_hive.jpg'%>)">
      Abeilles Amoureuses
    </div>
  <% end %>
</div>
