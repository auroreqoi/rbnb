<div class="index-container">
  <div class="card-product">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Trier par
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "Prix dÃ©croissant", hives_path(query: params[:query], order: "desc_price"), class: "dropdown-item"%>
        <%= link_to "Prix croissant", hives_path(query: params[:query], order: "asc_price"), class: "dropdown-item"%>
        <a class="dropdown-item" href="#">Prix descendent</a>
        <a class="dropdown-item" href="#">meilleurs notes</a>
      </div>
    </div>
    <% @hives.each do |hive| %>
      <%= link_to hive_path(hive), class: 'card-hives' do%>
          <%= cl_image_tag hive.photo.key, crop: :fill, width: 400 %>
          <i class="fas fa-heart fa-heart-hive"></i>
          <div class='card-product-infos'>
            <h2>
              <i class="fab fa-forumbee"></i>
              <%= hive.name.capitalize %>
            </h2>
            <h3>
              <i class="fas fa-map-marker-alt"></i>
              <%= hive.address %>
            </h3>
            <p>
              <i class="fas fa-comment"></i>
              <%= hive.description %>
            </p>
          </div>
          <div class="card-product-price">
            <h2><%= hive.price_per_day.to_i %></h2>
            <p>p / jour</p>
          </div>
      <% end %>
    <% end %>
  </div>
  <div id='map'
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
