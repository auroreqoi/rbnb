<div class="container d-flex justify-content-center">
  <div class="bg-white my-4 rounded py-4 px-4 w-75">
    <h2 class="mb-4 text-center">Ajoutez votre superbe ruche !</h2>
    <%= simple_form_for @hive do |f| %>
      <%= f.input :name,
            label: "Nom",
            required: false,
            placeholder: "La Ruche du Wagon" %>
      <%= f.input :description,
            label: "Description",
            required: false,
            placeholder: "Une magnifique petite ruche rouge et blanche." %>
      <%= f.input :category, label: "CatÃ©gorie", required: false, collection: Hive::CATEGORIES %>
      <%= f.input :address, required: false,
            input_html: { data: { geocoder_target: "address" }, class: 'd-none' },
            wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Pollens</span>
        </div>
        <%= f.input :price_per_day,
            label: false,
            wrapper: false,
            placeholder: "Prix par jour" %>
        <div class="input-group-append">
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <br>
      <%= f.input :photo, as: :file, label: "Ajoutez une photo" %>
      <div class="text-center">
        <%= f.submit "Enregister", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
